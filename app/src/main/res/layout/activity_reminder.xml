<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back2"
    tools:context=".Reminder.ReminderS">

    <TextView
        android:id="@+id/selectedTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="55dp"
        android:text="08 : 45 PM"
        android:textAlignment="center"
        android:textColor="#081D5E"
        android:textSize="46dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/selectTimeBtn"
        android:layout_width="356dp"
        android:layout_height="76dp"
        android:layout_marginHorizontal="26dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="25dp"
        android:text="Select Time"
        android:textSize="26dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextminRepationRemindre" />

    <Button
        android:id="@+id/cancelAlarmBtn"
        android:layout_width="354dp"
        android:layout_height="69dp"
        android:layout_marginHorizontal="26dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="25dp"
        android:text="Cancel Alarm"
        android:textSize="26dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/setAlarmBtn" />

    <Button
        android:id="@+id/setAlarmBtn"
        android:layout_width="352dp"
        android:layout_height="68dp"
        android:layout_marginHorizontal="26dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="25dp"
        android:text="Set Alarm"
        android:textSize="26dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/selectTimeBtn" />

    <EditText
        android:id="@+id/editTextHoursRepationRemindre"
        android:layout_width="282dp"
        android:layout_height="40dp"
        android:layout_marginTop="21dp"
        android:layout_marginEnd="11dp"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="102dp"
        android:layout_height="28dp"
        android:layout_marginStart="18dp"
        android:layout_marginTop="21dp"
        android:text="Hours"
        android:textColor="#081D5E"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="100dp"
        android:layout_height="26dp"
        android:layout_marginStart="18dp"
        android:layout_marginTop="43dp"
        android:text="minute"
        android:textColor="#081D5E"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <EditText
        android:id="@+id/editTextminRepationRemindre"
        android:layout_width="278dp"
        android:layout_height="50dp"
        android:layout_marginTop="31dp"
        android:layout_marginEnd="13dp"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextHoursRepationRemindre" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="379dp"
        android:layout_height="43dp"
        android:layout_marginStart="21dp"
        android:layout_marginTop="34dp"
        android:text="inpute the time to rpeat the reminder"
        android:textColor="#081D5E"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/selectedTime" />

</androidx.constraintlayout.widget.ConstraintLayout>