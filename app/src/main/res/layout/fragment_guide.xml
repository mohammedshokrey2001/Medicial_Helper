<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AboutApp.GuideFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <VideoView
            android:id="@+id/videoView"
            android:layout_width="322dp"
            android:layout_height="420dp"
            android:layout_marginStart="72dp"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/button_about_app_add_medcine"
            android:layout_width="263dp"
            android:layout_height="44dp"
            android:layout_marginStart="72dp"
            android:layout_marginTop="20dp"
            android:text="How to Add medcine "
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/videoView" />

        <Button
            android:id="@+id/button_about_app_how_to_create_reminder"
            android:layout_width="260dp"
            android:layout_height="42dp"
            android:layout_marginStart="72dp"
            android:layout_marginTop="8dp"
            android:text="how to create reminder "
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/button_about_app_add_appinment" />

        <Button
            android:id="@+id/button_about_app_add_appinment"
            android:layout_width="260dp"
            android:layout_height="45dp"
            android:layout_marginStart="72dp"
            android:layout_marginTop="8dp"
            android:text="How to add apoinment"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/button_about_app_add_medcine" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>